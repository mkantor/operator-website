{{#if (eq os "linux")}}
  <ul class="commands">
    <li>curl -L https://github.com/mkantor/operator/releases/download/{{version}}/operator-{{os}}-x86-64.tar.gz \
  &gt; operator.tar.gz</li>
    <li>sha256sum -c &lt;(echo "{{hash}}  operator.tar.gz") \
  &amp;&amp; tar -xf operator.tar.gz</li>
    <li>echo '\{{#if true}}Hello, world!\{{/if}}' \
  | ./operator eval --content-directory=/dev/null</li>
  </ul>
{{else}}{{#if (eq os "macos")}}
  <ul class="commands">
    <li>curl -L https://github.com/mkantor/operator/releases/download/{{version}}/operator-{{os}}-x86-64.tar.gz \
  &gt; operator.tar.gz</li>
    <li>shasum -a 256 -c &lt;(echo "{{hash}}  operator.tar.gz") \
  &amp;&amp; tar -xf operator.tar.gz</li>
    <li>echo '\{{#if true}}Hello, world!\{{/if}}' \
  | ./operator eval --content-directory=/dev/null</li>
  </ul>
{{/if}}{{/if}}
